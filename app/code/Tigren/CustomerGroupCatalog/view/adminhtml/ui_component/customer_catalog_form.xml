<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">customer_catalog_form.customer_catalog_form_data_source</item>
            <item name="namespace" xsi:type="string">customer_catalog_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="childrenFromMeta" xsi:type="boolean">true</item>
        <item name="buttons" xsi:type="array">
            <item name="save" xsi:type="array">
                <item name="name" xsi:type="string">save</item>
                <item name="label" xsi:type="string" translate="true">Save</item>
                <item name="class" xsi:type="string">primary</item>
                <item name="url" xsi:type="string">*/*/save</item>
            </item>
            <item name="back" xsi:type="array">
                <item name="name" xsi:type="string">back</item>
                <item name="label" xsi:type="string" translate="true">Back</item>
                <item name="class" xsi:type="string">back</item>
                <item name="url" xsi:type="string">*/*/</item>
            </item>
        </item>
    </argument>
    <settings>
        <namespace>customer_catalog_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>customer_catalog_form.customer_catalog_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="customer_catalog_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Tigren\CustomerGroupCatalog\Ui\DataProvider\Rule\Form\DataProvider" name="customer_catalog_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>rule_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="customer_group_catalog_fieldset" sortOrder="5">
    <settings>
        <collapsible>false</collapsible>
        <label/>
    </settings>
    <field name="rule_id" formElement="hidden">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="source" xsi:type="string">catalog</item>
            </item>
        </argument>
        <settings>
            <dataType>text</dataType>
        </settings>
    </field>
    <field name="active" sortOrder="10" formElement="checkbox">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="source" xsi:type="string">catalog</item>
                <item name="default" xsi:type="number">1</item>
            </item>
        </argument>
        <settings>
            <validation>
                <rule name="required-entry" xsi:type="boolean">false</rule>
            </validation>
            <dataType>boolean</dataType>
            <label translate="true">Active</label>
        </settings>
        <formElements>
            <checkbox>
                <settings>
                    <valueMap>
                        <map name="false" xsi:type="string">0</map>
                        <map name="true" xsi:type="string">1</map>
                    </valueMap>
                    <prefer>toggle</prefer>
                </settings>
            </checkbox>
        </formElements>
    </field>
        <field name="name" sortOrder="20" formElement="input">
            <settings>
                <dataType>string</dataType>
                <label translate="true">Name</label>
            </settings>
        </field>
        <field name="priority" sortOrder="30" formElement="input">
            <settings>
                <dataType>number</dataType>
                <label translate="true">Priority</label>
            </settings>
        </field>
<!--        <field name="store" formElement="multiSelect">-->
<!--                <settings>-->
<!--                    <dataType>number</dataType>-->
<!--                    <label translate="true">Store</label>-->
<!--                </settings>-->
<!--                    <formElements>-->
<!--                        <multiselect>-->
<!--                            <settings>-->
<!--                                <options class="Magento\Store\Model\System\Store">-->
<!--                                </options>-->
<!--                            </settings>-->
<!--                        </multiselect>-->
<!--                    </formElements>-->
<!--        </field>-->
        <field name="discount_amount" sortOrder="40" formElement="input">
            <settings>
                <dataType>number</dataType>
                <label translate="true">Discount Amount</label>
            </settings>
        </field>
    </fieldset>
</form>
