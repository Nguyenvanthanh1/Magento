<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="QuestionDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="resourceModel" xsi:type="string">Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult</argument>
            <argument name="mainTable" xsi:type="string">tigren_testimonial_question</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument xsi:type="array" name="">
                <item xsi:type="string" name="tigren_testimonial_question_grid_data_source">QuestionDataProvider</item>
            </argument>
        </arguments>
    </type>
    <virtualType name="VirtualTypeImage" type="Magento\Catalog\Model\ImageUploader">
        <arguments>
            <argument name="baseTmpPath" xsi:type="string">profile/image</argument>
            <argument name="basePath" xsi:type="string">profile/image</argument>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Tigren\Testimonial\Controller\Adminhtml\Image\Upload">
        <arguments>
            <argument name="imageUploader" xsi:type="object">VirtualTypeImage</argument>
        </arguments>
    </type>
</config>
